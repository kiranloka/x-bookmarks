model User {
    id             String     @default(cuid())
    email          String     @unique
    username       String?
    hashedPassword String?
    firstName      String?
    lastName       String?
    xUserId        String?
    xAccessToken   String?    @db.text
    xRefreshToken  String?    @db.text
    xUsername      String?
    bookmarks      Bookmark[]
    categories     Category[]
    syncJobs       SyncJob[]
    createdAt      DateTime   @default(now())
    updatedAt      DateTime   @updatedAt
    lastSyncAt     DateTime

    @@index([email])
    @@index([xUserId])
    @@map("users")
}
